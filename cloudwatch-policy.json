{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowDescribeLogGroups",
      "Effect": "Allow",
      "Action": [
        "logs:DescribeLogGroups"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AllowLogManagementForService",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": [
        "arn:aws:logs:ap-northeast-2:672131927168:log-group:/ecs/*",
        "arn:aws:logs:ap-northeast-2:672131927168:log-group:/ecs/*:log-stream:*"
      ]
    }
  ]
}
